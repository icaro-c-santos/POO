	public boolean ValideDate(LocalDate data) {
		
	  	LocalDate dateMin = LocalDate.of(1900, 01, 01);
	  	LocalDate dateMax = LocalDate.now();
	  	if(data == null  || data.isAfter(dateMax) || data.isBefore(dateMin)) {
    	   return false;
    	}
		return true;
	}
	
	
	
	
	
	
}
